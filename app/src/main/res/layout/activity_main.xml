<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.destiny.foresee.radarview.ScanPersonView
        android:id="@+id/spv_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:scanCircleColor="#ff2f60"
        app:scanSpeed="5"
        app:scanSweepColor="#ff2f60" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="129dp"
        android:layout_height="129dp"
        android:src="@mipmap/ic_profile"
        app:civ_border_color="#fff"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="@id/spv_main"
        app:layout_constraintLeft_toLeftOf="@id/spv_main"
        app:layout_constraintRight_toRightOf="@id/spv_main"
        app:layout_constraintTop_toTopOf="@+id/spv_main" />
</androidx.constraintlayout.widget.ConstraintLayout>